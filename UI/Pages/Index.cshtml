@page
@model IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .vh-100 {
            display: flex;
            justify-content: center; /* align horizontal */
            align-items: center; /* align vertical */
        }

        .img-align {
            margin-top: -75px;
        }
    </style>
</head>
<body>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid img-align" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h2>Login</h2>
                <form method="post">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" asp-for="Username" class="form-control form-control-lg" placeholder="Enter username"/>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Enter password"/>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?<a class="link-danger" style="margin-left: 5px;" asp-page="/Register">Register</a></p>
                    </div>
                </form>
                @if (Model.Message != null)
                {
                    <div class="alert alert-danger mt-3">@Model.Message</div>
                }
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
